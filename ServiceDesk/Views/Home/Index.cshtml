@{
    ViewData["Title"] = "Заявки";
}
<div class="d-flex mb-3 gap-2">
    <input type="text" id="searchInput" class="form-control w-25" placeholder="Поиск по названию..." oninput="filterTicketsByName()" />
    <button class="btn btn-outline-primary" onclick="sortTicketsByPriority()">Сортировать по приоритету</button>
</div>

<div class="container mt-4">
    <h1 class="mb-4">Заявки</h1>
    <button class="btn btn-success mb-3" onclick="openCreateModal()">Добавить заявку</button>
    <div id="ticket-list" class="row gy-4">
        <!-- Tickets will be loaded here -->
    </div>
</div>

@section Scripts {
    <script src="~/js/tickets.js"></script>
}
